#include <stdio.h>

int main(int argc, char *argv[])
{
    int n;
    
    do
    {
        printf("Inserisci n: ");
        scanf("%d", &n);
    }while(n<=0);
    
    for(int i=0; i<=n/2; i++)
    {
        for(int j=0; j<n; j++)
        {
            if(i+j==n)
            {
                printf("%d e %d danno come somma %d\n", i,j,n);
            }
        }
    }

return 0;
}

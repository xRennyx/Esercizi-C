#include <stdio.h>

int calcola_somma(int n1, int n2)
{
	return n1 + n2;
}

int main(int argc, char *argv[])
{

	int a, b, somma;

	do
	{
		printf("Inserisci a: ");
		scanf("%d", &a);
	} while (a<0);

	do
	{
		printf("Inserisci b: ");
		scanf("%d", &b);
	} while (b<0);

	somma = calcola_somma(a, b);

	printf("la somma Ã¨: %d\n", somma);

	return 0;
}
